<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".LoginActivity">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/login_title"
            android:textAppearance="@style/Typography.H1.Bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/login_description"
            android:textAppearance="@style/Typography.Body2.Bold"
            app:layout_constraintBottom_toTopOf="@+id/iv_login_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <ImageView
            android:id="@+id/iv_login_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="52dp"
            android:adjustViewBounds="true"
            android:src="@drawable/img_signup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_description" />

        <View
            android:id="@+id/view_kakao"
            android:layout_width="0dp"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/shape_corner6_bg_yellow"
            app:layout_constraintBottom_toTopOf="@+id/view_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:text="@string/kakao_login"
            android:textAppearance="@style/Typography.H4.Bold"
            app:drawableStartCompat="@drawable/ic_kakao"
            app:layout_constraintBottom_toBottomOf="@+id/view_kakao"
            app:layout_constraintEnd_toEndOf="@+id/view_kakao"
            app:layout_constraintStart_toStartOf="@+id/view_kakao"
            app:layout_constraintTop_toTopOf="@+id/view_kakao" />

        <View
            android:id="@+id/view_email"
            android:layout_width="0dp"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="37dp"
            android:background="@drawable/shape_corner6_bg_email_login_color"
            android:paddingVertical="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_kakao" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:text="@string/email_login"
            android:textAppearance="@style/Typography.H4.Bold"
            android:textColor="@color/white"
            app:drawableStartCompat="@drawable/ic_mail"
            app:drawableTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/view_email"
            app:layout_constraintEnd_toEndOf="@+id/view_email"
            app:layout_constraintStart_toStartOf="@+id/view_email"
            app:layout_constraintTop_toTopOf="@+id/view_email" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
